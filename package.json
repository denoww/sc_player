{
  "name": "sc_player",
  "version": "1.2.0",
  "description": "Player de Publicidades do Seu Condomínio.",
  "main": "server.js",
  "private": true,
  "author": {
    "name": "Seu Condomínio",
    "email": "contato@seucondominio.com.br",
    "url": "http://seucondominio.com.br"
  },
  "engines": {
    "node": ">=6.2.0"
  },
  "scripts": {
    "start": "electron .",
    "start-nodemon": "nodemon --inspect server.js",
    "delete_old_images": "coffee ./tasks/delete_old_images.coffee",
    "update_timezone": "coffee ./tasks/update_timezone.coffee",
    "compile-coffee": "coffee -wc app/assets/**",
    "build-deb": "npm run package-deb && npm run deb",
    "package-deb": "electron-packager . --overwrite --platform linux --arch x64 --icon=app/assets/images/icon.png --prune=true --out dist",
    "deb": "electron-installer-debian --src dist/sc_player-linux-x64/ --arch amd64 --config installers/deb_config.json",
    "build-win": "npm run package-win && npm run win",
    "package-win": "electron-packager . --overwrite --asar --platform=win32 --arch=ia32 --icon=app/assets/images/icon.ico --prune=true --out=dist --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SC Player\"",
    "win": "node installers/create_win_installer.js"
  },
  "dependencies": {
    "@sentry/browser": "^5.5.0",
    "@sentry/integrations": "^5.5.0",
    "@sentry/node": "^5.5.0",
    "coffeescript": "^2.4.1",
    "electron": "^5.0.6",
    "electron-context-menu": "^0.13.0",
    "express": "^4.16.3",
    "moment": "^2.24.0",
    "node-env-file": "^0.1.8",
    "nodemon": "^1.11.0",
    "request": "^2.87.0",
    "rss-parser": "^3.7.2",
    "sc-node-tools": "^1.2.1",
    "shelljs": "^0.8.3",
    "url-exists": "^1.0.3"
  },
  "devDependencies": {
    "electron-installer-debian": "*",
    "electron-packager": "^13.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^3.0.4"
  }
}
